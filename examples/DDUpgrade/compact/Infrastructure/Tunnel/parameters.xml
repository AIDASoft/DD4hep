<!-- XML description of the Tunnel parameter definitions                        -->
<!-- ========================================================================== -->
<lccdd>

  <define>
<!-- This file contains the general parameters for Tunnel -->

<!--                 PARAMETERs DEFINITION                    -->
<!-- Should be in parameter file? -->
<!-- Tunnel length is arbitrary   -->
<!-- Radius - engineer drawing value LHCJRB860009 -->
<!-- Angles - engineer drawing value LHCJRB860009 -->
<!-- xPos   - engineer drawing value LHCJRB860009 -->

    <constant name="WallThick"              value="0.5*m"/>
    <constant name="TunnelLength"              value="10.*m"/>
    <constant name="TunnelRadius"              value="2.2*m"/>
    <constant name="TunnelStartAngle"          value="-39.5212*degree"/>
    <constant name="TunnelDeltaAngle"          value="259.0424*degree"/>
    <constant name="TunnelxPos"                value="-704.0*mm"/>
    <constant name="TunnelFlooryPos"           value="-1.4*m"/>

<!-- These are ESTIMATES from Gloria's overview drawing..... -->
<!--parameter name="TunnelSeparation" value="24.75*m" /-->
<!--parameter name="TunnelSeparation" value="23.00*m" /-->
    <constant name="TunnelSeparation" value="38.50*m" />
    <constant name="ExtraTunnelLength" value="15.00*m" />
    <constant name="ExtraTunnelWallThick" value="2.0*WallThick" />

<!-- These are taken from LHCJRB860009 - well the first one is -->
    <constant name="TunnelyPos"  value="0.3*m"  />
    <constant name="TunnelzPos"  value="-0.5*TunnelLength"  />

    <constant name="DownstreamPlugLength" value="2.0*m" />
    <constant name="DownstreamBeamWidth" value ="1150.0*mm" />
    <constant name="DownstreamPlugxPos"  value ="0.0*m" />
    <constant name="DownstreamPlugyPos" value  ="0.0*m" />
    <constant name="DownstreamPlugzPos" value  ="-TunnelzPos+24622.0*mm+0.5*DownstreamPlugLength" />

    <constant name="DownstreamBeamxPos"  value ="-TunnelxPos" />
    <constant name="DownstreamBeamyPos" value  ="-TunnelyPos" />
    <constant name="DownstreamBeamzPos" value  ="0.0*mm" />

<!-- These are taken from LHCJRB840001 - well the first one is -->
<!-- beam width is approximate/measured from drawing -->
    <constant name="UpstreamPlugLength" value="800.0*mm" />
    <constant name="UpstreamBeamWidth"  value="125.0*mm" />
    <constant name="UpstreamPlugxPos"   value="0.0*m" />
    <constant name="UpstreamPlugyPos"   value="0.0*m" />
    <constant name="UpstreamPlugzPos"   value="-TunnelzPos-2.2*m-0.5*UpstreamPlugLength" />

    <constant name="UpstreamBeamxPos"  value ="-TunnelxPos" />
    <constant name="UpstreamBeamyPos" value  ="-TunnelyPos" />
    <constant name="UpstreamBeamzPos" value  ="0.0*mm" />

<!-- Magnet is approximate - width is a guess -->
    <constant name="UpstreamMagnetWidth"  value="800.0*mm" />
    <constant name="UpstreamMagnetLength" value="3815.0*mm" />
    <constant name="UpstreamMagnetxPos"   value="-TunnelxPos"/>
    <constant name="UpstreamMagnetyPos"   value="-TunnelyPos"/>
    <constant name="UpstreamMagnetzPos"   value="UpstreamPlugzPos-0.5*UpstreamPlugLength-404.0*mm-0.5*UpstreamMagnetLength" />
    <constant name="UpstreamMagnetBeamxPos"   value="0.0*mm"/>
    <constant name="UpstreamMagnetBeamyPos"   value="0.0*mm"/>
    <constant name="UpstreamMagnetBeamzPos"   value="0.0*mm"/>
<!-- End of general parameters for Tunnel -->
  </define>

  <materials>
  </materials>

  <display>
  </display>
</lccdd>
