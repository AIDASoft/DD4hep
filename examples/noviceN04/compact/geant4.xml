<?xml version="1.0" encoding="UTF-8"?>
<geant4>
  <sensitive_detectors>

    <sd name="TrackerN04" 
        type="DD4hepExN04TrackerSD"
        ecut="1.0*keV" 
        verbose="true" 
        hit_aggregation="position">
    </sd>
    <sd name="CalorimeterN04" 
        type="DD4hepExN04CalorimeterSD"
        ecut="0.5*keV" 
        verbose="true" 
        hit_aggregation="position">
    </sd>
    <sd name="MuonN04"  
        type="DD4hepExN04MuonSD"
        ecut="0.5*keV"
        verbose="true"
        hit_aggregation="position">
    </sd>

  </sensitive_detectors>

  <properties>
     <attributes name="geant4_field"
          id="0"
          type="Geant4FieldSetup"
          object="GlobalSolenoid"
          global="true"
          min_chord_step="0.01*mm"
          delta_chord="0.25*mm"
          delta_intersection="1e-05*mm"
          delta_one_step="0.001*mm"
          eps_min="5e-05*mm"
          eps_max="0.001*mm"
          stepper="HelixSimpleRunge"
          equation="Mag_UsualEqRhs">
     </attributes>
  </properties>

</geant4>
