      <position x="0" y="200" z="0"/>
    </detector>
    <detector id="4" name="AssemblyReflected_X" type="DD4hep_ReflectedDetector" sdref="AssemblyDetector">
      <reflect type="X"/>
      <position x="200" y="0" z="0"/>
    </detector>
  </detectors>
</lccdd>
