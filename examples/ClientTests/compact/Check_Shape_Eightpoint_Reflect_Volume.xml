      <check vis="Shape2_vis">
        <shape type="EightPointSolid" dz="30*cm">
           <vertex x="-30*cm" y="-25*cm"/>
           <vertex x="-25*cm" y=" 25*cm"/>
           <vertex x="  5*cm" y=" 25*cm"/>
           <vertex x=" 25*cm" y="-25*cm"/>
           <vertex x="-28*cm" y="-23*cm"/>
           <vertex x="-23*cm" y=" 27*cm"/>
